root = true

[*]
indent_style = tab
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
# editorconfig-tools is unable to ignore longs strings or urls
max_line_length = off

[{*.json,*.yml}]
indent_size = 2

[*.yaml]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
