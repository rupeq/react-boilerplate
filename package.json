{
	"name": "boilerplate",
	"private": true,
	"version": "0.0.1",
	"description": "",
	"lint-staged": {
		"{src,e2e}/**/*.ts?(x)": [
			"eslint --max-warnings 0 --fix",
			"prettier --write"
		],
		"*.css": [
			"stylelint --fix",
			"prettier --write"
		],
		"*.{json,md,yml}": [
			"prettier --write"
		]
	},
	"scripts": {
		"setup": "git init && npx husky init && npx playwright install && shx rm .husky/pre-commit",
		"prepare": "husky",
		"husky": "node ./node_modules/husky/bin.js",
		"lint": "eslint --max-warnings 0",
		"lint:css": "stylelint \"src/**/*.css\" --fix",
		"lint:fix": "eslint --max-warnings 0 --fix",
		"precommit": "lint-staged",
		"format": "prettier \"src/**/*.{ts,tsx}\" --write",
		"commitlint": "commitlint --edit",
		"commitizen": "git cz --hook || true",
		"test:unit": "vitest src/",
		"test:unit:coverage": "vitest --coverage src/",
		"test:e2e": "playwright test",
		"test:e2e:report": "playwright show-report",
		"test": "vitest run src/ && playwright test",
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview"
	},
	"author": "artem.dereviago <multimouse123@gmail.com>",
	"license": "MIT",
	"type": "module",
	"devDependencies": {
		"@commitlint/cli": "^19.6.1",
		"@commitlint/config-conventional": "^19.6.0",
		"@eslint/compat": "^1.2.4",
		"@eslint/js": "^9.17.0",
		"@faker-js/faker": "^9.3.0",
		"@playwright/test": "^1.49.1",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.1.0",
		"@testing-library/user-event": "^14.5.2",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/eslint__js": "^8.42.3",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.2",
		"@types/react": "^19.0.2",
		"@types/react-dom": "^19.0.2",
		"@typescript-eslint/eslint-plugin": "^8.18.2",
		"@typescript-eslint/parser": "^8.18.2",
		"@vitejs/plugin-react-swc": "^3.7.2",
		"@vitest/coverage-v8": "^2.1.8",
		"autoprefixer": "^10.4.20",
		"commitizen": "^4.3.1",
		"cssnano": "^7.0.6",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.7.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.3",
		"eslint-plugin-react-hooks": "^5.1.0",
		"eslint-plugin-react-refresh": "^0.4.16",
		"eslint-plugin-unicorn": "^56.0.1",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"jsdom": "^25.0.1",
		"lint-staged": "^15.3.0",
		"postcss-preset-env": "^10.1.3",
		"prettier": "^3.4.2",
		"prop-types": "^15.8.1",
		"shx": "^0.3.4",
		"stylelint": "^16.12.0",
		"stylelint-config-standard": "^36.0.1",
		"stylelint-order": "^6.0.4",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.2",
		"vite": "^6.0.6",
		"vite-plugin-static-copy": "^2.2.0",
		"vitest": "^2.1.8",
		"vitest-preview": "^0.0.1"
	},
	"dependencies": {
		"i18next": "^24.2.0",
		"i18next-browser-languagedetector": "^8.0.2",
		"i18next-http-backend": "^3.0.1",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-i18next": "^15.2.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
